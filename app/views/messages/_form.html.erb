<div class="w-full" data-controller="form">
  <%= form_with(model: [room, message], id: 'message_form', class: 'w-full flex flex-col', data: { controller: 'form', action: 'submit->form#resetComponent' }) do |f| %>
    <div class="flex w-full">
      <%= f.text_field :text, class: 'w-full rounded shadow text-sm font-semibold border border-gray-100' %>
      <%= f.submit 'Send', class: 'bg-green-600 text-white font-semibold rounded p-2 cursor-pointer' %>
    </div>
  <% end %>
</div>
